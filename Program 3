#define servo 9

#define btn 8

#define forwards 1
#define backwards 2

void setup() {
  Serial.begin(9600);

   pinMode(btn, INPUT);

   Serial.println("Set-up Program 3");
}

void loop() {

  int potent = analogRead(servo);                    //reads potentiometer
  int scalepotent = map(potent, 0, 1023, 0, 180);   //scale servo to motor (0-180)
  int btnstate = digitalRead(btn);                   //Read button
  
  Serial.println(scalepotent);                      //Debug print for potentiometer

  if (btnstate == HIGH){                           //Button is pressed
    Serial.println("Shift");
    //scalepotent = scalepotent * -1;                 //Reverses speed
    //analogWrite(servo, scalepotent);                //Turn motor with potentiometer
    delay(100);                                     //Give time to shift directions
  }

  else {                                            //Button isn't pressed
    Serial.println("No Shift");
    //analogWrite(servo,scalepotent);                 //Speed like normal
  }
  
  delay(10);                              
}
